<sql id="listCommonWhere">
		<if test="q.roleId!=null ">
			AND ROLE_ID=#{q.roleId}
		</if>
		<if test="q.permId!=null ">
			AND PERM_ID=#{q.permId}
		</if>
		<if test="q.createTime!=null ">
			AND CREATE_TIME=#{q.createTime}
		</if>
</sql>

</mapper>
