 -->
	<!-- 系统错误转发配置[并记录错误日志] -->
	<bean
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property name="defaultErrorView" value="error"></property>   <!-- 默认为500，系统错误(error.jsp) -->
	</bean>

</beans>